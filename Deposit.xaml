<Window x:Class="NebliDex.Deposit"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Deposit To Wallet" Height="250" Width="370" WindowStyle="ToolWindow" ResizeMode="NoResize">
	<StackPanel Background="#f1eded">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
			<Label Content="Make A Deposit" FontSize="20" FontWeight="Bold" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
			<Label Content="Select Coin: " FontSize="16" />
			<ComboBox Name="Coin_Box" HorizontalAlignment="Left" Margin="3 0" MaxWidth="100" FontSize="16" SelectionChanged="Change_Coin">
			</ComboBox>
		</StackPanel>
		<Border Height="1" Background="DarkGray" MaxWidth="340" Margin="0 10 0 3" />
		<StackPanel>
			<Label Content="Deposit Address: " HorizontalContentAlignment="Center" FontSize="16"/>
			<TextBox Name="Deposit_Address" Width="335" Margin="3" IsReadOnly="True" FontSize="14" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<Button Content="Close" Width="100" FontSize="18" Click="Close_Dialog" />
		</StackPanel>
	</StackPanel>
</Window>