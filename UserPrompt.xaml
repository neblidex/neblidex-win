<Window x:Class="NebliDex.UserPrompt"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="NebliDex" Height="155" Width="300" WindowStyle="ToolWindow" ResizeMode="NoResize">
	<StackPanel Background="#f1eded">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
			<TextBlock Text="Enter Prompt Here" Name="Prompt" FontWeight="Bold" TextAlignment="Center" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
			<PasswordBox Name="User_Response_Pass" Width="250" FontSize="16" />
			<TextBox Name="User_Response" Width="250" FontSize="16" Visibility="Collapsed" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
			<Button Name="Ok" Content="Ok" Width="100" FontSize="18" Click="Save_Info" />
		</StackPanel>
	</StackPanel>
</Window>