<Window x:Class="NebliDex.SeedList"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Select the DNS Seed to Use" Height="175" Width="350" WindowStyle="ToolWindow" ResizeMode="NoResize">
	<StackPanel Background="#f1eded">
		<StackPanel Orientation="Horizontal" Margin="5">
			<Label Content="Seed" FontWeight="Bold" />
			<TextBox Name="dns_field" Width="220" Margin="3 0" VerticalAlignment="Center" FontSize="16" />
			<Button Content="Reset" Width="50" Margin="3 0" Click="Reset_DNS" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Label Content="Or a CN IP Address" FontWeight="Bold" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" Margin="5">
			<Label Content="IP" FontWeight="Bold" />
			<TextBox Name="ip_field" Width="275" Margin="19 0" FontSize="16" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
			<Button Name="Connect_Button" Content="Connect" Width="100" FontSize="18" Click="Close_Dialog" />
		</StackPanel>
	</StackPanel>
</Window>